<p id="notice"><%= notice %></p>

<div class="row justify-content-md-center mt-5">
  <div class="col-sm-9">
    <div class="card">
      <div class="card-header">
        Listing Openings
      </div>

      <div class="card-body">
        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Calendar</th>
              <th>Start at</th>
              <th>End at</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @openings.each do |opening| %>
              <tr>
                <td>#<%= opening.id %></td>
                <td><%= link_to opening.calendar.name, [:admin, opening.calendar] %></td>
                <td><%= opening.start_at %></td>
                <td><%= opening.end_at %></td>
                <td><%= link_to 'Show', [:admin, @calendar, opening] %></td>
                <td><%= link_to 'Edit', edit_admin_calendar_opening_path(@calendar.id, opening) %></td>
                <td><%= link_to 'Destroy', [:admin, @calendar, opening], method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <p class="text-center mt-5">
          <%= link_to 'New Opening', new_admin_calendar_opening_path, class: 'btn btn-primary' %>
        </p>
      </div>
    </div>
  </div>
</div>
