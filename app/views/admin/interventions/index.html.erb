<p id="notice"><%= notice %></p>

<div class="row justify-content-md-center mt-5">
  <div class="col-sm-9">
    <div class="card">
      <div class="card-header">
        Listing Interventions
      </div>

      <div class="card-body">
        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Duration</th>
              <th>Calendar</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @interventions.each do |intervention| %>
              <tr>
                <td>#<%= intervention.id %></td>
                <td><%= intervention.name %></td>
                <td><%= intervention.duration %></td>
                <td><%= link_to intervention.calendar.name, [:admin, intervention.calendar] %></td>
                <td><%= link_to 'Show', [:admin, intervention] %></td>
                <td><%= link_to 'Edit', edit_admin_intervention_path(intervention) %></td>
                <td><%= link_to 'Destroy', [:admin, intervention], method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <p class="text-center mt-5">
          <%= link_to 'New Intervention', new_admin_intervention_path, class: 'btn btn-primary' %>
        </p>
      </div>
    </div>
  </div>
</div>
