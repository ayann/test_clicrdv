<p id="notice"><%= notice %></p>

<div class="row justify-content-md-center mt-5">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Calendar #<%= calendar.id %>
      </div>

      <div class="card-body">
        <p>
          <strong>Name :</strong>
          <%= calendar.name %>
        </p>

        <p>
          <strong>Intervals :</strong>
          <%= calendar.intervals %>
        </p>

        <p>
          <strong>Intervention :</strong>
          <%= @intervention.name %>
        </p>

        <p>
          <strong>Intervention duration:</strong>
          <%= @intervention.duration %>
        </p>

        <p>
          <strong>Availables slots</strong>
        </p>

        <table class="table table-borderless table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Slot</th>
            </tr>
          </thead>

          <tbody>
            <% @slots.each.with_index(1).each do |slot, index| %>
              <tr>
                <td>#<%= index %></td>
                <td><%= slot %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <p class="text-center mt-5">
          <%= link_to 'Back', [:admin, calendar] %>
        </p>
      </div>
    </div>
  </div>
</div>
